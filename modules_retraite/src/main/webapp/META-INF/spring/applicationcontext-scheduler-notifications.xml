<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean class="org.jahia.notifications.ci.beans.MailNotificationBean">
        <property name="mailMemberTemplate" value="/notifications/templates/notification_member.vm"/>
        <property name="mailProfessionalTemplate" value="/notifications/templates/notification_professional.vm"/>
        <property name="mailModeratorTemplate" value="/notifications/templates/notification_moderator.vm"/>
        <property name="mailProfessionalReplyTemplate" value="/notifications/templates/notification_professional_reply.vm"/>
	</bean>

	<bean parent="jobSchedulingBean">
        <property name="overwriteExisting" value="true"/>
        <property name="jobDetail">
            <bean class="org.springframework.scheduling.quartz.JobDetailBean">
                <property name="name" value="MailNotificationDailyScheduler" />
                <property name="jobClass" value="org.jahia.notifications.ci.scheduler.MailNotificationDailyScheduler" />
                <property name="group" value="Maintenance" />
                <property name="description" value="Runs Retreat Community Mails Notification Job" />
            </bean>
        </property>
        <property name="trigger">
            <bean class="org.quartz.CronTrigger">
                <property name="name" value="MailNotificationDailySchedulerTrigger"/>
                <!-- executer chaque jours -->
<!--                 <property name="cronExpression" value="0 0/1 * 1/1 * ? *"/> -->
                <property name="cronExpression" value="0 0 0 * * ?"/>
            </bean>
        </property>
    </bean>
    <bean parent="jobSchedulingBean">
        <property name="overwriteExisting" value="true"/>
        <property name="jobDetail">
            <bean class="org.springframework.scheduling.quartz.JobDetailBean">
                <property name="name" value="MailNotificationEvryTwoDaysScheduler" />
                <property name="jobClass" value="org.jahia.notifications.ci.scheduler.MailNotificationEveryTwoDaysScheduler" />
                <property name="group" value="Maintenance" />
                <property name="description" value="Runs Retreat Community Mails Notification Job" />
            </bean>
        </property>
        <property name="trigger">
            <bean class="org.quartz.CronTrigger">
                <property name="name" value="MailNotificationEvryTwoDaysSchedulerTrigger"/>
                <!-- executer chaque deux jour  -->
                <property name="cronExpression" value="0 0 2 1/3 * ?"/>
            </bean>
        </property>
    </bean>
    <bean parent="jobSchedulingBean">
        <property name="overwriteExisting" value="true"/>
        <property name="jobDetail">
            <bean class="org.springframework.scheduling.quartz.JobDetailBean">
                <property name="name" value="MailNotificationEvryFourDaysScheduler" />
                <property name="jobClass" value="org.jahia.notifications.ci.scheduler.MailNotificationEveryFourDaysScheduler" />
                <property name="group" value="Maintenance" />
                <property name="description" value="Runs Retreat Community Mails Notification Job" />
            </bean>
        </property>
        <property name="trigger">
            <bean class="org.quartz.CronTrigger">
                <property name="name" value="MailNotificationEvryFourDaysSchedulerTrigger"/>
                <!-- executer chaque quatre jour  -->
                <property name="cronExpression" value="0 0 4 1/5 * ?"/>
            </bean>
        </property>
    </bean>
</beans>